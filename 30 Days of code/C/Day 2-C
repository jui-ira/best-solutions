#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    float a,b,c,tip,tax,total;
    scanf("%f",&a);
    scanf("%f",&b);
    scanf("%f",&c);
    tip= a*(b/100);
    tax= a*(c/100);
    total= a+tip+tax;
    int final=round(total);
    printf("The total meal cost is %d dollars.",final);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}

